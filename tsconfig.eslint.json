{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "noEmit": true,
    "types": ["node", "jest"]
  },
  "include": [
    "src/*.ts",
    "src/**/*.ts",
    "test/*.ts",
    "test/**/*.ts",
    "tests/*.ts",
    "tests/**/*.ts",
    "packages/**/src/**/*.ts",
    "packages/**/test/**/*.ts",
    "packages/**/tests/**/*.ts"
  ],
  "exclude": ["dist", "node_modules"]
}
