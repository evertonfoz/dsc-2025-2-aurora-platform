# Postgres connection (exemplo)
# DATABASE_URL=postgres://user:password@localhost:5432/aurora
# Database Configuration
DB_HOST=db
DB_PORT=5432
DB_USER=postgres
DB_PASS=postgres
DB_NAME=aurora_users
DB_LOGGING=false

# Environment example (não comitar segredos reais)
# Copie para `.env` e preencha com valores reais antes de executar a aplicação

# Service token usado por serviços internos para chamadas entre serviços
SERVICE_TOKEN=change-me-to-a-strong-secret

# JWT secrets (troque em produção)
JWT_ACCESS_SECRET=dev_access_secret
JWT_REFRESH_SECRET=dev_refresh_secret

# Refresh token TTL (dias)
REFRESH_EXPIRES_DAYS=7

# Application Configuration
PORT=3001
NODE_ENV=production

# JWT Configuration
JWT_ACCESS_SECRET=your_jwt_access_secret_here
# Development-only helper: set to 'true' to auto-inject a fake authenticated
# user when no Authorization header is present. Use only for local testing.
# DEV_AUTO_AUTH=false